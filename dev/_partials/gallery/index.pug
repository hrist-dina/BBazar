mixin gallery-item (img, h3, rating, price, oldPrice)
    .gallery__item
        img.gallery__img(src=img alt="")
        .gallery__description
            .gallery__value 
                span.gallery__price=('$'+price)
                - if (oldPrice) {
                span.gallery__price-old=('$'+oldPrice)
                - }
            h3.gallery__h3=h3
            .gallery__star-rating
            - for (let i = 0; i < 5; i++) {
                - if (i < rating) {
                    i.fas.fa-star
                - } else {
                    i.far.fa-star
                - }
            - }
        .gallery__inner-left
            a.gallery__symbol(href="#")
                i.far.fa-heart
                .gallery-hint Add To Favorite
            a.gallery__symbol(href="#")
                i.fas.fa-exchange-alt
                .gallery-hint Add To Compare
            a.gallery__symbol(href="#")
                i.fas.fa-eye
                .gallery-hint Quick look
            a.gallery__symbol(href="#")
                i.fas.fa-shopping-basket
                .gallery-hint Add To Cart

